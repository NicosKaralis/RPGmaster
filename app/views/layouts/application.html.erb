<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  
  <div id="flash">
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, :class => key %>
    <% end %>
  </div>
  <%= yield %>

  <br />
  <%= link_to_unless_current "Home", root_url %>
</body>
</html>
