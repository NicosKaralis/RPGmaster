<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="flash">
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, raw(msg), :id => "flash", :class => "#{name}") %>
    <% end %>
  </div>
  
  <%= render 'shared/sidebar' %>
  
  <%= yield %>

</body>
</html>
